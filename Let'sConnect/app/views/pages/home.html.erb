<div class="chat-wrapper">
<div class="my-wrap">	
<div class="head-wrap">
	<h1 class="chat-head">Chat</h1>
</div>
 <div class="well msg-output" id="chatbox">
<% @messages.each do |message| %>
 <%= render 'messages/message', messages: message %>
<% end %>

 </div>
 <% if current_user %>
 <%= form_with model: @message do |f| %>
  <div class="input-group" >
   <%= f.text_field :body, placeholder: "say something", class: "form-control" %>  
   <div class="input-group-btn">
    <%= f.submit "Send", class: "btn btn-primary theme-btn" %>
   </div>
  </div>
 <% end %>
<% end %>
</div>
</div>

<script>
$(document).ready(function(){
	var messages = $('#chatbox');

	function init(){
		messages.scrollTop(messages[0].scrollHeight);
	}
   window.setTimeout(init,50);
});
</script>